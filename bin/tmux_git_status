#!/bin/sh
[[ $ZSH_EVAL_CONTEXT =~ :file$ ]] && sourced=1 || sourced=0

current_path=$(tmux display-message -p -F "#{pane_current_path}")
cd $current_path

tmux_git_status_bar() {
  [[ $(git status 2> /dev/null) ]]
  if [ $? -eq 0 ]; then
    if [[ $(git diff-index HEAD 2> /dev/null) ]]; then
      status+="#[bg=colour88]"
    elif [[ $(git ls-files --exclude-standard --others 2> /dev/null) ]]; then
      status+="#[bg=colour202]"
    else
      status+="#[bg=colour22]"
    fi

    status+="#[fg=colour3,bold]> #[fg=colour7]#[fg=colour248, bold]$(git rev-parse --abbrev-ref HEAD)#[fg=colour3,bold] <"

    if [[ $(git stash list) ]]; then
      status="$status#[bg=colour26]#[fg=colour26]#[fg=colour7,nobold]â„"
    fi

    echo $status
  fi
}

tmux_git_status_bar
